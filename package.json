{
        "name": "@glre/root",
        "author": "tseijp",
        "version": "0.1.0",
        "license": "MIT",
        "private": true,
        "sideEffects": false,
        "scripts": {
                "clean": "npm i && npx lerna clean -y",
                "start": "cd examples/docs && npm run start",
                "build": "cd examples/docs && npm run build",
                "serve": "cd examples/docs && npm run serve",
                "write": "cd examples/docs && docusaurus write-translations",
                "tunnel": "cd examples/native && npm run start --tunnel",
                "android": "cd examples/native && npm run start --android",
                "ios": "cd examples/native && npm run start --ios",
                "web": "cd examples/native && npm run start --web",
                "watch": "cd examples/cov && npm run start",
                "cov": "cd examples/cov && npm run cov",
                "qwik": "cd examples/qwik && npm run start",
                "solid": "cd examples/solid && npm run start",
                "ls": "cd packages/core && npm publish --dry-run",
                "pub": "npm run rollup && cd packages/core && yarn publish",
                "rollup": "cd packages/core && npx rollup -c ../../rollup.config.ts --configPlugin typescript --bundleConfigAsCjs"
        },
        "dependencies": {
                "glre": "*",
                "lerna": "7.0.2"
        },
        "devDependencies": {
                "@babel/core": "*",
                "@babel/preset-env": "7.20.2",
                "@babel/preset-react": "7.18.6",
                "@babel/preset-typescript": "7.18.6",
                "@rollup/plugin-babel": "6.0.3",
                "@rollup/plugin-commonjs": "24.0.0",
                "@rollup/plugin-node-resolve": "15.0.1",
                "@rollup/plugin-terser": "0.2.1",
                "@rollup/plugin-typescript": "10.0.1",
                "rollup": "3.8.1",
                "typescript": "4.9.4"
        },
        "engines": {
                "node": ">=14"
        },
        "workspaces": [
                "examples/*",
                "packages/*"
        ]
}
