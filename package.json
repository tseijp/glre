{
        "name": "@glre/root",
        "author": "tseijp",
        "version": "0.1.0",
        "license": "MIT",
        "private": true,
        "sideEffects": false,
        "scripts": {
                "bootstrap": "yarn && lerna bootstrap",
                "clean": "yarn && lerna clean -y",
                "start": "cd examples/docs && yarn start",
                "build": "cd examples/docs && yarn build",
                "serve": "cd examples/docs && yarn serve",
                "write": "cd examples/docs && docusaurus write-translations",
                "watch": "cd examples/cov && yarn watch",
                "cov": "cd examples/cov && yarn cov",
                "ls": "cd packages/core && npm publish --dry-run",
                "pub": "cd packages/core && yarn publish",
                "rollup": "cd packages/core && npx rollup -c ../../rollup.config.ts --configPlugin typescript --bundleConfigAsCjs"
        },
        "dependencies": {
                "lerna": "5.5.4"
        },
        "devDependencies": {
                "@babel/core": "*",
                "@babel/preset-env": "7.20.2",
                "@babel/preset-react": "7.18.6",
                "@babel/preset-typescript": "7.18.6",
                "@rollup/plugin-babel": "6.0.3",
                "@rollup/plugin-commonjs": "24.0.0",
                "@rollup/plugin-node-resolve": "15.0.1",
                "@rollup/plugin-terser": "0.2.1",
                "@rollup/plugin-typescript": "10.0.1",
                "rollup": "3.8.1",
                "typescript": "4.7.4"
        },
        "engines": {
                "node": ">=14"
        },
        "workspaces": [
                "examples/*",
                "packages/*"
        ]
}
